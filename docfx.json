{
  "metadata": [
    {
      "src": [
        {
          "src": "./src",
          "files": [
            "CoberturaConverter.Core/*.csproj"
          ],
          "exclude": [
            "**/bin/**",
            "**/obj/**"
          ]
        }
      ],
      "dest": "./core",
      "properties": {
        "TargetFramework": "netstandard2.0"
      }
    },
    {
      "src": [
        {
          "src": "./src",
          "files": [
            "Nuke.CoberturaConverter/*.csproj"
          ],
          "exclude": [
            "**/bin/**",
            "**/obj/**"
          ]
        }
      ],
      "dest": "./nuke",
      "properties": {
        "TargetFramework": "netstandard2.0"
      }
    },
    {
      "src": [
        {
          "src": "./src",
          "files": [
            "CoberturaConverter.CommandLine/*.csproj"
          ],
          "exclude": [
            "**/bin/**",
            "**/obj/**"
          ]
        }
      ],
      "dest": "./cli",
      "properties": {
        "TargetFramework": "netstandard2.0"
      }
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "**/*.md",
          "**/*.yml"
        ],
        "exclude": [
          "output/**/*",
          "docs/**/*",
          "GitVersion.yml"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "**.png"
        ]
      }
    ],
    "overwrite": "specs/*.md",
    "globalMetadata": {
      "_appTitle": "CoberturaConverter Documentation",
      "_appFooter": "&copy; <a href=\"https://www.dangl-it.com\" target=\"_blank\">Dangl IT - Georg Dangl</a>",
      "_appLogoPath": "app-logo.png",
      "_appFaviconPath": "app-logo.png",
      "_enableSearch": true,
      "_gitUrlPattern": "github"
    },
    "dest": "./output",
    "template": [
      "default",
      "docs/template"
    ]
  }
}
